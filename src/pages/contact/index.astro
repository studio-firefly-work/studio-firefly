---
import PageLayout from '@/layouts/PageLayout.astro'
import Inner from '@/components/atoms/Inner/Inner.astro'
import FormContact from '@/components/organisms/FormContact/FormContact.astro'

const seo: Theme.SEO = {
  title: 'お問い合わせ',
  description:
    'お問い合わせ内容は、平日18:00～20:00 / 土日祝日9:00～15:00に確認させていただいております。<br/>上記時間内で3日以内の折り返しのご連絡を心掛けておりますが、内容により返信までにお時間をいただく場合がございます。<br/>あらかじめご了承くださいますようお願いいたします。',
  permalink: ['contact'],
  breadcrumb: { contact: 'お問い合わせ' },
  ogtype: 'website',
  itemtype: 'ContactPage',
}
---

<PageLayout {seo}>
  <Inner size="slim">
    <FormContact />
  </Inner>
</PageLayout>
