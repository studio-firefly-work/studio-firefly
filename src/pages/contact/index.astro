---
import PageLayout from '@/layouts/PageLayout.astro'
import Container from '@/components/atoms/Container.astro'
import Inner from '@/components/atoms/Inner.astro'
import { FormContact } from '@/components/organisms/FormContact'

const seo: Theme.SEO = {
  title: 'お問い合わせ',
  description: 'お問い合わせページのdescriptionです',
  permalink: ['contact'],
  breadcrumb: { contact: 'お問い合わせ' },
}
---

<PageLayout {seo}>
  <Container>
    <Inner size="slim" class="text-center">
      <ul class="steps w-full">
        <li class="step step-primary">入力</li>
        <li class="step">確認</li>
        <li class="step">完了</li>
      </ul>
    </Inner>

    <Inner size="slim">
      <FormContact client:only="react" />
    </Inner>
  </Container>
</PageLayout>
