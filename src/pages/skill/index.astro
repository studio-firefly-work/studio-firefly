---
export const prerender = false
import PageLayout from '@/layouts/PageLayout.astro'
import { getPageDataByPermalink } from '@/constants/pageDatas'

const permalink = '/skill'
const pageData = getPageDataByPermalink(permalink)
---

<PageLayout {pageData}>
  <button class="login">login</button>
  <button class="getUsers">getUsers</button>
</PageLayout>

<script>
  document.querySelector('button.login').onclick = () => login('user1', 'password')
  document.querySelector('button.getUsers').onclick = () => getUsers()

  async function login(name, password) {
    const res = await fetch('http://localhost:3001/api/auth/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ name, password }),
      credentials: 'include',
    })

    if (!res.ok) {
      const errorData = await res.json()
      throw new Error(errorData.message)
    }

    console.log('Login successful!')
  }

  function getCookie(name) {
    const value = `; ${document.cookie}`
    const parts = value.split(`; ${name}=`)
    if (parts.length === 2) return parts.pop().split(';').shift()
  }

  async function getUsers() {
    const cookie = getCookie('auth_session')
    if (!cookie) {
      throw new Error('Unauthorized')
    }

    const res = await fetch('http://localhost:3001/api/user')
    const data = await res.json()
    console.log(data)
  }
</script>
