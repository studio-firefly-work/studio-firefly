---
import PageLayout from '@/layouts/PageLayout.astro'
import Container from '@/components/atoms/Container.astro'
import Inner from '@/components/atoms/Inner.astro'
import SkillMatrix from '@/components/organisms/SkillMatrix/SkillMatrix.astro'

const seo: Theme.SEO = {
  title: 'スキルセット',
  description:
    'このページでは、私のプログラミングスキルを「好き/嫌い」を縦軸、「得意/不得意」を横軸にした2軸のマトリクスで評価し、それぞれのスキルをアイコンで視覚的に配置しています。<br/>アイコンをクリックすると、そのスキルの詳細情報を確認することができます。',
  permalink: ['skill'],
  breadcrumb: { skill: 'スキルセット' },
}
---

<PageLayout {seo}>
  <Container>
    <Inner size="full" class="md:max-w-screen-lg">
      <SkillMatrix />
    </Inner>
  </Container>
</PageLayout>
