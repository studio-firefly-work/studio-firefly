---
export const prerender = false
import PageLayout from '@/layouts/PageLayout.astro'

const seo: Theme.SEO = {
  title: 'スキルセット',
  description: 'スキルセットページのdescriptionです',
  permalink: ['skill'],
  breadcrumb: { skill: 'スキルセット' },
}
---

<PageLayout {seo}>
  <button class="login">login</button>
  <button class="getUsers">getUsers</button>
  <button class="logout">logout</button>
  <div id="user-data" class="user-data"></div>
</PageLayout>

<script>
  const logoutButton = document.querySelector('button.logout') as HTMLButtonElement
  const loginButton = document.querySelector('button.login') as HTMLButtonElement
  const getUsersButton = document.querySelector('button.getUsers') as HTMLButtonElement

  logoutButton.onclick = () => logout(1)
  loginButton.onclick = () => login('user1', 'password')
  getUsersButton.onclick = () => getUsers()

  window.addEventListener('load', getUsers)

  async function logout(id: number) {
    const res = await fetch(`${import.meta.env.PUBLIC_API}/auth/logout/${id}`, {
      method: 'DELETE',
      credentials: 'include',
    })

    if (!res.ok) {
      const errorData = await res.json()
      throw new Error(errorData.message)
    }

    console.log('Logout successful!')
  }

  async function login(name: string, password: string) {
    const res = await fetch(`${import.meta.env.PUBLIC_API}/auth/login`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ name, password }),
      credentials: 'include',
    })

    if (!res.ok) {
      const errorData = await res.json()
      throw new Error(errorData.message)
    }

    console.log('Login successful!')
  }

  async function getUsers() {
    const res = await fetch(`${import.meta.env.PUBLIC_API}/user`, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
      credentials: 'include',
    })
    const data = await res.json()
    console.log(data)

    displayUserData(data)
  }

  function displayUserData(users: any) {
    const userDataDiv = document.getElementById('user-data')
    if (userDataDiv) {
      userDataDiv.innerHTML = '' // 以前のデータをクリア

      users.forEach((user: any) => {
        const userDiv = document.createElement('div')
        userDiv.className = 'user'

        const userName = document.createElement('h2')
        userName.textContent = user.name

        userDiv.appendChild(userName)

        userDataDiv.appendChild(userDiv)
      })
    }
  }
</script>
