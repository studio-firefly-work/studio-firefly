---
import Header from '@/components/organisms/Header/Header.astro'
import Footer from '@/components/organisms/Footer/Footer.astro'
import { getPageDataByUrl } from '@/constants/pageDatas'
import { getSiteDatasAll } from '@/constants/siteDatas'

const { url } = Astro.props
const page = getPageDataByUrl(url)
const site = getSiteDatasAll()
---

<!doctype html>
<html lang="jp" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{site.name}{page.title != 'Home' && ' - ' + page.title}</title>
    <meta name="description" content={page.description} />
    <meta name="keyword" content={page.keyword} />

    {page.noindex && <meta name="robots" content="noindex" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Noto+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-white font-body text-black dark:bg-slate-900 dark:text-white"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
