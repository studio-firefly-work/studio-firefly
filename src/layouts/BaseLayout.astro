---
import { getSiteDataAll } from '@/constants/siteDatas'

const { pageData } = Astro.props
const siteData = getSiteDataAll()
---

<!doctype html>
<html lang="jp" class="h-full scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{siteData.name}{pageData.title != 'Home' && ' - ' + pageData.title}</title>
    <meta name="description" content={pageData.description} />
    <meta name="keyword" content={pageData.keyword} />

    {pageData.noindex && <meta name="robots" content="noindex" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
  </head>

  <body class="manipulation min-h-full bg-base-200 font-body text-base tracking-normal antialiased">
    <slot />
  </body>
</html>

<style is:global>
  .theme-text-3xl {
    @apply text-4xl md:text-5xl;
  }
  .theme-text-2xl {
    @apply text-3xl md:text-4xl;
  }
  .theme-text-xl {
    @apply text-2xl md:text-3xl;
  }
  .theme-text-lg {
    @apply text-xl md:text-2xl;
  }
  .theme-text-md {
    @apply text-lg md:text-xl;
  }
  .theme-text-sm {
    @apply text-sm md:text-sm;
  }
  .theme-text-xs {
    @apply text-xs md:text-xs;
  }
</style>
