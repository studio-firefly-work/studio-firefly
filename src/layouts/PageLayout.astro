---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Container from '@/components/atoms/Container/Container.astro'
import Footer from '@/components/organisms/Footer/Footer.astro'
import Header from '@/components/organisms/Header/Header.astro'

const { pageData } = Astro.props
---

<BaseLayout {pageData}>
  <Header />
  <main>
    <Container class="py-10 md:py-20">
      <h1 class="flex flex-col text-sm before:text-2xl before:content-[attr(data-title-en)]" data-title-en={pageData.title.en}>{pageData.title.jp}</h1>
    </Container>
    <slot />
  </main>
  <Footer />
</BaseLayout>
