---
import BaseLayout from './BaseLayout.astro'
import Container from '@/components/atoms/Container/Container.astro'
import { getPageDataByPermalink } from '@/constants/pageDatas'

const { permalink } = Astro.props
const page = getPageDataByPermalink(permalink)
---

<BaseLayout {permalink}>
  <Container>
    <h1 class="text-2xl md:text-4xl">{page.title}</h1>
    <slot />
  </Container>
</BaseLayout>
