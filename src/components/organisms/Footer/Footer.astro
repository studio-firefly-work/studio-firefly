---
import * as utils from '@/utils'
import Container from '@/components/atoms/Container/Container.astro'
import { getSiteDatasAll } from '@/constants/siteDatas'

const site = getSiteDatasAll()
const normalizeTelNumber = utils.normalizeTelNumber(site.tel)
---

<footer class="mt-auto">
  <Container class="py-4 md:py-8" maxWidth="artboard">
    <address>
      {site.postalCode}{site.address}<a href=`tel:${normalizeTelNumber}`
        >{site.tel}</a
      >
    </address>
    <small class="block text-center">{site.copy}</small>
  </Container>
</footer>
