---
import { tv } from 'tailwind-variants'
import { Icon } from 'astro-icon/components'
import BaseFormField from '@/components/molecules/BaseFormField/BaseFormField.astro'

const { id, label, type, placeholder, autocomplete, icon, error, ...rest } = Astro.props

const style = tv({
  base: 'input input-bordered w-full',
  variants: {
    icon: {
      true: 'pl-12',
      false: '',
    },
  },
})
---

<BaseFormField {id} {label} {error}>
  {icon && <Icon name={icon} width={20} height={20} class="absolute inset-y-0 left-4 h-full opacity-70" />}

  <input
    {id}
    {type}
    {placeholder}
    {autocomplete}
    name={id}
    x-model={id}
    class={style({ icon: Boolean(icon) })}
    {...rest}
  />
</BaseFormField>
