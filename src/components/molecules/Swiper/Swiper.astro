---
import Button from '@/components/atoms/Button/Button.astro'
import Container from '@/components/atoms/Container/Container.astro'

import { Image } from 'astro:assets'
import slide01 from '@/assets/images/test/ged038.jpg'
import slide02 from '@/assets/images/test/ged039.jpg'
import slide03 from '@/assets/images/test/ged040.jpg'
import slide04 from '@/assets/images/test/ged041.jpg'
import slide05 from '@/assets/images/test/ged042.jpg'
import slide06 from '@/assets/images/test/ged043.jpg'
import slide07 from '@/assets/images/test/ged044.jpg'
import slide08 from '@/assets/images/test/ged045.jpg'
import slide09 from '@/assets/images/test/ged046.jpg'
import slide10 from '@/assets/images/test/ged047.jpg'
import slide11 from '@/assets/images/test/ged048.jpg'
import slide12 from '@/assets/images/test/ged049.jpg'
import slide13 from '@/assets/images/test/ged050.jpg'
---

<!-- Slider main container -->
<Container class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <Button class="swiper-slide"><Image src={slide01} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide02} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide03} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide04} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide05} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide06} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide07} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide08} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide09} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide10} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide11} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide12} alt="" /></Button>
    <Button class="swiper-slide"><Image src={slide13} alt="" /></Button>
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button swiper-button-prev"></div>
  <div class="swiper-button swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <!-- <div class="swiper-scrollbar"></div> -->
</Container>

<style>
  .swiper {
    overflow: visible;
  }

  .swiper-container {
    width: 100%;
    margin: 40px 0;
    padding: 45px 0;
  }

  .swiper-slide {
    opacity: 0.4;
    overflow: hidden;
    transition: 0.7s;
  }

  .swiper-slide img {
    width: 100%;
  }

  .swiper-slide-active {
    opacity: 1;
    z-index: 1;
  }
</style>

<script type="module">
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.esm.browser.min.js'

  export const swiperConfig = {
    centeredSlides: true,
    speed: 500,
    slidesPerView: 1.5,
    spaceBetween: 40,
    autoplay: {
      delay: 3000,
    },
    breakpoints: {
      640: {
        slidesPerView: 2.5,
      },
      768: {
        slidesPerView: 2.75,
      },
      1080: {
        slidesPerView: 3.25,
      },
      1280: {
        slidesPerView: 3.75,
      },
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  }

  const swiper = new Swiper('.swiper', swiperConfig)
</script>
