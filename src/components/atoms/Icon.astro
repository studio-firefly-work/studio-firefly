---
import { tv } from 'tailwind-variants'

const { name, class: addClasses = '', ...rest } = Astro.props
const style = tv({
  base: `h-5 w-5 ${addClasses || ''}`,
})
---

<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class={style()} {...rest}>
  <use href={`#${name}`}></use>
</svg>
